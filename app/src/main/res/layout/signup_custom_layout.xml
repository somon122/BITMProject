<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f4eded"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:text="User Register"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="#020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/signUp_Email_id"
        android:textColor="#030303"
        android:paddingLeft="5dp"
        android:background="#e2e4df"
        android:inputType="textEmailAddress"
        android:layout_margin="10dp"
        android:hint="Enter Email Address"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/signUp_Password_id"
            android:textColor="#030303"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#e2e4df"
            android:inputType="numberPassword"
            android:layout_margin="10dp"
            android:hint="Enter Password"
            android:layout_width="match_parent"
            android:layout_height="70dp" />



    </android.support.design.widget.TextInputLayout>



<Button
    android:id="@+id/signUp_Register_id"
    android:textAllCaps="false"
    android:textColor="#030303"
    android:paddingLeft="5dp"
    android:background="#e2e4df"
    android:text=" Register "
    android:textSize="20dp"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:layout_width="100dp"
    android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="30dp"
        android:id="@+id/signUpClickLogin_id"
        android:textSize="17sp"
        android:textColor="#030303"
        android:gravity="center"
        android:text=" Already Register? Please Click  Cancel"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>