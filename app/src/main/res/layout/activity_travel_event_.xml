<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#685c66"
    android:layout_height="match_parent"
    tools:context=".TravelEvent.TravelEvent_Activity">


    <TextView
        android:gravity="center"
        android:text="Travel Event"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:textColor="#409c99"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <EditText
        android:id="@+id/travelDestination_id"
        android:textColor="#030303"
        android:paddingLeft="5dp"
        android:inputType="text"
        android:layout_margin="10dp"
        android:hint="Travel Destination"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <EditText
        android:id="@+id/travelEstimatedBudget_id"
        android:textColor="#030303"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:inputType="number"
        android:layout_margin="10dp"
        android:hint="Estimated Budget"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/travelFromDate_id"
        android:textColor="#030303"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:inputType="date"
        android:layout_margin="10dp"
        android:hint="From Date"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/travelToDate_id"
        android:textColor="#030303"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:inputType="date"
        android:layout_margin="10dp"
        android:hint="To Date"
        android:layout_width="match_parent"
        android:layout_height="50dp" />



    <Button
        android:id="@+id/createEvent_id"
        android:textSize="20sp"
        android:text="Create Event"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="70dp" />


</LinearLayout>