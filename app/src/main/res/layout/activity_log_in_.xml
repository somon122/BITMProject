<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#e2d8d8"
    android:layout_height="match_parent"
    tools:context=".LogIn_Activity">


    <EditText
        android:id="@+id/logIn_Email_id"
        android:textColor="#030303"
        android:paddingLeft="5dp"
        android:background="#becad2"
        android:inputType="textEmailAddress"
        android:layout_margin="10dp"
        android:hint="Enter Email Address"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/logIn_Password_id"
            android:textColor="#030303"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#becad2"
            android:inputType="numberPassword"
            android:layout_margin="10dp"
            android:hint="Enter Password"
            android:layout_width="match_parent"
            android:layout_height="60dp" />


    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/logInButton_id"
        android:textAllCaps="false"
        android:textColor="#030303"
        android:paddingLeft="5dp"
        android:background="#becad2"
        android:text=" Login "
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/logInClickRegister_id"
        android:textSize="17sp"
        android:textColor="#030303"
        android:gravity="center"
        android:text=" You are not Register? Please Click  Register "
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>